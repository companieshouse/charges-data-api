local_resource(
  name = 'dev:charges-data-api-build',
  cmd = 'mvn compile',
  deps = ['src']
)

custom_build(
  ref = '169942020521.dkr.ecr.eu-west-1.amazonaws.com/charges-data-api',
  command = 'mvn compile jib:dockerBuild -Dimage=$EXPECTED_REF',
  live_update = [
    sync(
      local_path = './target/classes',
      remote_path = '/app/classes'
    ),
    restart_container()
  ],
  deps = ['./target/classes']
)